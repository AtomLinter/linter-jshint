{
  "name": "linter-jshint",
  "main": "./lib/main.js",
  "version": "2.1.0",
  "description": "Linter plugin for JavaScript, using jshint",
  "repository": "https://github.com/AtomLinter/linter-jshint.git",
  "license": "MIT",
  "scripts": {
    "test": "apm test",
    "lint": "eslint lib spec"
  },
  "package-deps": [
    "linter"
  ],
  "dependencies": {
    "atom-linter": "^5.0.1",
    "atom-package-deps": "^4.0.1",
    "jshint": "^2.9.2",
    "jshint-json": "^1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.3",
    "eslint": "^3.0.1",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.7.0"
  },
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        2,
        "never"
      ],
      "no-console": 0,
      "semi": [
        2,
        "never"
      ],
      "global-require": 0,
      "no-nested-ternary": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  }
}
